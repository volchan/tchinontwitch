<div class="raid-show">
  <div class="raid-show-title">
    <h1><%= "#{@raid.dungeon.name} #{@raid.difficulty}" %></h1>
    <h3><%= "#{Time.parse(@raid.date).to_date.strftime('%A %d %B %Y')} at #{Time.parse(@raid.date).strftime('%H:%M')}" %></h3>
  </div>
  <div class="raid-show-tags">
    <div class="raid-show-tags-pending">
      <div class="raid-show-tags-pending-title">
        <h3>Pending</h3>
      </div>
      <div class="raid-show-tags-pending-content">
        <% if @pending_tags.where(toon: current_user.toons).empty? %>
          <div class="apply">
            <div class="apply-content">
              <i class="fa fa-plus-circle"></i>
              <span>Apply to this raid</span>
            </div>
            <%= link_to '', new_raid_tag_path(@raid) %>
          </div>
        <% else %>
          <%= render 'pending_tags' %>
        <% end %>
      </div>
    </div>
    <div class="raid-show-tags-accepted">
      <div class="raid-show-tags-accepted-title">
        <h3>Roster</h3>
      </div>
      <div class="raid-show-tags-accepted-content"></div>
    </div>
  </div>
</div>
