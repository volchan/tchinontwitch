<% content_for :title, 'Sign up' %>
<div class="devise">
  <div class="devise-content">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, placeholder: 'email', label: false, required: true, autofocus: true %>
        <%= f.input :username, placeholder: 'username', label: false, required: true, autofocus: true %>
        <%= f.input :password, placeholder: 'password', label: false, required: true %>
        <%= f.input :password_confirmation, placeholder: 'confirm your password', label: false, required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Sign up', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
