<% content_for :title, 'Change your password' %>
<div class="devise">
  <div class="devise-content">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, placeholder: 'new password', label: false, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, placeholder: 'confirm your new password', label: false, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Change my password", class: 'btn btn-primary' %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
